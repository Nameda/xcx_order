<!--index.wxml-->
<view class="index">
  <swiper class="swiper" circular="true" autoplay="true" interval="3000" duration="1000" previous-margin="96rpx" next-margin="96rpx">  
      <block wx:for="{{movies}}" wx:key="index">  
        <swiper-item>  
          <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>  
        </swiper-item>  
      </block>  
    </swiper> 


</view>
