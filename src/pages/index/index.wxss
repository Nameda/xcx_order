/**index.wxss**/
.index {
}
.index .swiper{
  height: 372rpx;
}
.swiper-item{
  padding: 5rpx 6rpx;
}
.slide-image{
  height: 372rpx;
}
.searchBox{
  width:690rpx;
  height: 40rpx;
  padding:18rpx;
  line-height: 40rpx;
  background: #e5e5e5;
  margin:0 auto;
  margin-top: 16rpx;
  font-size: 32rpx;
  color: #b8b8b8;
  border-radius: 6rpx;
}
.searchBox .seachIcon{
  width: 40rpx;
  height: 40rpx;
  float: left;
}
.searchBox .seachIcon image{
  width: 100%;
  height: 100%;
}
.searchBox .seachTxt{
  float: left;
  padding-left: 20rpx;
  width:600rpx;
  height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.storeBox{
  font-size: 32rpx;
  padding: 0 10rpx;
  margin-top: 14rpx;
  color:#9c9c9c;
}
.storeBox .storeTabs{
  display: flex;
  justify-content: space-between;
}
.storeBox .storeTab{
  width: 350rpx;
  background: #f8f8f8;
  height:83rpx;
  line-height: 83rpx;
  text-align: center;
  border-radius: 10rpx;
}
.storeBox .storeTab image{
  width:30rpx;
  height: 30rpx;
  margin-left: 30rpx;
}
.storeBox .storeTabs .on{
  color: #f07c0d;
  background: #fff;
}
.storeBox .storeTabs .on::after{
  content: "";
  display: block;
  width:350rpx;
  height: 4rpx;
  background: #fff;
  position: absolute;
  z-index: 3;
}
.storeListBox .storeList{
  background: #fff;
  margin-bottom: 10rpx;
  border:1rpx solid #dfdfdf;
  border-radius: 10rpx;
  padding:36rpx 55rpx 45rpx 55rpx;
  font-size: 26rpx;
  color: #9d9d9d;
  position: relative;
}
.storeListBox .storeList .storeName{
  color: #333;
}
.storeListBox .storeList .storeName .adIcon{
  width:36rpx;
  height:36rpx;
  margin-right: 6rpx;
  position: relative;
  top:4rpx;
}
.storeListBox .on .storeName{
  color: #f07c0d;
}
.storeListBox .storeList .distance{
  position: absolute;
  right: 55rpx;
  top: 36rpx;
}
.storeListBox .on .distance{
  color: #f07c0d;
}
.storeListBox .storeList .address{
  padding-top: 20rpx;
}
.storeListBox .on .address{
  color: #000;
}
.storeListBox .storeList .showPart{
  display: flex;
  margin-bottom: 10rpx;
  margin-top: 54rpx;
  justify-content: space-between;
}
.storeListBox .storeList .showPart .chooseTxt{
  width:502rpx;
  height:65rpx;
  line-height: 65rpx;
  text-align: center;
  background: #f07c0d;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 10rpx;
  
}
.storeListBox .storeList .showPart image{
  width:48rpx;
  height:48rpx;
  position: relative;
  top:6rpx;
}
.noMore{
  text-align: center;
  font-size: 26rpx;
  padding-bottom: 20rpx;
}